{
    "name": "Cases-site",
    "description": "Cases Composer install",
     "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/7"

        }
    },
    "require": {
        "composer/installers": "~1.0",
        "cweagans/composer-patches": "~1.0",
        "drupal/drupal": "7.56",
        "drupal/admin_views": "1.6",
        "drupal/ctools": "1.12",
        "drupal/entity": "1.8",
        "drupal/file_entity": "2.3",
        "drupal/views_bulk_operations": "3.4",
        "drupal/media": "2.9",
        "drupal/views": "3.16.0-rc1"
    },
    "conflict": {
      "drupal/core": "8.*"
    },
    "scripts": {
        "post-update-cmd": [
          "rm -rf core-sites/sites",
          "./composer_post_install.sh",
          "rm -rf core-sites"
        ]
    },
    "config": {
      "vendor-dir": "vendor"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
      "installer-paths": {
        "core-sites":["type:drupal-core"],
        "sites/all/modules/contrib/admin_views": ["type:drupal-module"],
        "sites/all/modules/contrib/media": ["type:drupal-module"],
        "sites/all/modules/contrib/ctools": ["type:drupal-module"],
        "sites/all/modules/contrib/entity": ["type:drupal-module"],
        "sites/all/modules/contrib/file_entity": ["type:drupal-module"],
        "sites/all/modules/contrib/views_bulk_operatios": ["type:drupal-module"],
        "sites/all/modules/contrib/views": ["type:drupal-module"]
      },
      "preserve-paths": [
        "sites/all/drush",
        "sites/default/settings.php",
        "sites/default/files"
      ]
    }
}
